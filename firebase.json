{
  "hosting": {
    "public": ".",
    "ignore": [
      "functions",
      "node_modules",
      ".git",
      "*.md",
      "backend-example",
      "*.log",
      ".firebase",
      ".firebaserc",
      "package.json",
      "package-lock.json",
      "ResumeTailor.jsx"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}

